@model Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply</title>
    <link href="/modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="container m-4">
        <div class="card mx-auto" style="width: 500px">
            <div class="card-header">
                Başvuru Formu
            </div>
            <div class="card-body">
                <form asp-action="Apply" method="Post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Adınız</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">E-Posta</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Telefon</label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Confirm">Kursa katılacak mısınız?</label>
                        <select asp-for="Confirm" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="true">Evet, geliyorum</option>
                            <option value="false">Hayır, gelmiyorum</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary btn-block form-control" />
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>
</html>

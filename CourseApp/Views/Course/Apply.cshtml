@model Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply</title>
</head>
<body>

<form asp-action="Apply" method="Post">
    <div asp-validation-summary="All"></div>
    <p>
        <label asp-for="Name">Adınız</label>
        <input asp-for="Name"/>
    </p>
    <p>
        <label asp-for="Email">E-Posta</label>
        <input asp-for="Email"/>
    </p>
    <p>
        <label asp-for="Phone">Telefon</label>
        <input asp-for="Phone"/>
    </p>
    <p>
        <label asp-for="Confirm">Kursa katılacak mısınız?</label>
        <select asp-for="Confirm">
            <option value="">Seçiniz</option>
            <option value="true">Evet, geliyorum</option>
            <option value="false">Hayır, gelmiyorum</option>
        </select>
    </p>



    <input type="submit" value="Submit"/>
</form>
</body>
</html>

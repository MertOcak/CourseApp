@model Student
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
    <link href="/modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="container m-4">
        <div class="card mx-auto" style="width: 500px">
            <div class="card-header">
                Merhaba, @Model.Name
            </div>
            <div class="card-body">
                @if (Model.Confirm == true)
                {
                    <span>Kursa katılmış olduğunuzdan dolayı mutlu olduk.</span>
                    <div>
                        Diğer katılımcıları <a asp-action="List">görüntüle.</a>
                    </div>
                }
                else
                {
                    <span>Üzüldük. Umarım fikriniz değişir.</span>
                }
            </div>
        </div>
    </div>



</body>
</html>
